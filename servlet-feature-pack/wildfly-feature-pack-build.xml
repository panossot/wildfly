<build xmlns="urn:wildfly:feature-pack-build:2.0">
    <dependencies>
        <dependency group-id="org.wildfly.core" artifact-id="wildfly-core-feature-pack">
            <name>core</name>
            <packages inherit="false">
                <exclude name="config.discovery"/>
                <include name="docs"/>
                <!--
                <include name="org.jboss.as.standalone.main"/>
                <include name="org.jboss.as.domain-management.main"/>
                -->
            </packages>
            <default-configs inherit="false"/>
        </dependency>
    </dependencies>
    <default-packages>
        <package name="dist.legacy"/>
        <!--
        <package name="product.conf"/>
        <package name="misc.standalone"/>
        <package name="misc.domain"/>
        <package name="modules.all"/>
         -->
    </default-packages>
    <package-schemas>
        <group name="org.jboss.as"/>
        <group name="org.jboss.metadata"/>
        <group name="org.wildfly"/>
        <group name="org.wildfly.core"/>
        <group name="org.wildfly.security"/>
    </package-schemas>

    <config name="standalone.xml" model="standalone">
        <props>
            <prop name="config-name" value="standalone.xml"/>
        </props>
        <feature-group name="standalone"/>
    </config>

    <config name="standalone-load-balancer.xml" model="standalone">
        <props>
            <prop name="config-name" value="standalone-load-balancer.xml"/>
        </props>
        <feature-group name="standalone-load-balancer"/>
    </config>

    <config name="default-domain" model="domain">
        <props>
            <prop name="domain-config-name" value="domain.xml"/>
        </props>
        <feature-group name="domain"/>
    </config>

    <config name="default-host" model="host">
        <props>
            <prop name="host-config-name" value="host.xml"/>
            <prop name="domain-config-name" value="domain.xml"/>
        </props>
        <feature-group name="host"/>
    </config>    
</build>
