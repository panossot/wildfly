<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="domain-load-balancer" xmlns="urn:wildfly:pm-feature-group:1.0">

    <feature-pack dependency="servlet">
        <feature-group name="domain-interfaces"/>
    </feature-pack>

    <feature-pack dependency="core">

        <feature spec="socket-binding-group">
            <param name="socket-binding-group" value="load-balancer-sockets"/>
            <feature-pack dependency="this">
                <feature-group name="load-balancer-sockets"/>
            </feature-pack>
            <feature-group name="domain-server-groups"/>
        </feature>

        <feature spec="profile">
            <param name="profile" value="load-balancer"/>

            <feature-pack dependency="this">
                <feature-group name="load-balancer-profile">
                    <feature-pack dependency="core">
                        <include feature-id="root-logger:subsystem=logging,root-logger=ROOT">
                            <param name="handlers" value="[&quot;FILE&quot;]"/>
                        </include>
                        <exclude spec="logging-console-handler"/>
                    </feature-pack>
                </feature-group>
            </feature-pack>
            
            <feature-group name="domain-server-groups"/>
        </feature>

        <feature spec="system-property">
            <param name="system-property" value="java.net.preferIPv4Stack"/>
            <param name="value" value="true"/>
        </feature>
        <feature-group name="access-control"/>
        <feature-group name="domain-host-excludes"/>
    </feature-pack>

</feature-group-spec>