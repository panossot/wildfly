<?xml version="1.0" encoding="UTF-8"?>
<feature-group-spec name="basic-ha-profile" xmlns="urn:wildfly:pm-feature-group:1.0">

    <feature-group name="basic-profile">                        
        <feature-pack dependency="servlet">
            <include feature-id="undertow:subsystem=undertow">
                <feature spec="undertow-server">
                    <feature spec="undertow-server-ajp-listener"/>
                </feature>
            </include>
        </feature-pack>

        <include feature-id="ejb3:subsystem=ejb3">
            <param name="default-sfsb-cache" value="distributable"/>
        </include>
    </feature-group>
        
    <feature-group name="modcluster"/>
    <feature-group name="infinispan-dist"/>
    <feature-group name="jgroups"/>
    <feature-group name="singleton"/>

</feature-group-spec>